<resources>

    <!-- Base application theme. -->
    <!--去掉标题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--去掉标题栏-->
        <!--<item name="android:windowActionBar">true</item>-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="margin">
        <item name="android:layout_marginLeft">@dimen/item_margin_small</item>
        <item name="android:layout_marginRight">@dimen/item_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/item_margin_small</item>
    </style>

    <style name="lineHeight_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_horizontal</item>
        <item name="android:background">@color/colorLine</item>


    </style>

</resources>
