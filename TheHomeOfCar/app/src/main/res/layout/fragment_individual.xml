<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/word_left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/individual_word"
            android:textColor="@color/wordColor_blue"
            android:textSize="@dimen/textsize_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:src="@mipmap/individual_night" />
    </LinearLayout>

    <TextView
        style="@style/little_line"
        android:layout_marginLeft="@dimen/padding_horizontal"
        android:background="@color/wordColor_blue" />

    <TextView style="@style/Line" />

    <TextView
        android:id="@+id/individual_login_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_one_hundred"
        android:gravity="center"
        android:text="@string/individual_login"
        android:textColor="@color/grayWord"
        android:textSize="@dimen/textsize_normal" />

    <!--四种登录方式-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/individual_zhanghao_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_zhanghao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/individual_zhanghao" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/individual_qq" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_weibo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/individual_weibo" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/individual_weixin" />

        </LinearLayout>


    </LinearLayout>

    <TextView style="@style/Line" />

    <TextView
       style="@style/individual_background"/>

    <TextView style="@style/Line" />

    <LinearLayout
        android:id="@+id/individual_youhuiquan_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_youhuiquan" />

        <TextView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="@string/individual_wode"
            android:textColor="@color/grayWord_much" />
    </LinearLayout>

    <TextView
        style="@style/Line"
        android:layout_marginLeft="@dimen/individual_line_marginleft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_shoucang3" />

        <TextView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="@string/individual_shoucang"
            android:textColor="@color/grayWord_much" />

    </LinearLayout>

    <TextView
        style="@style/Line"
        android:layout_marginLeft="@dimen/individual_line_marginleft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_shizhong1" />

        <TextView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="@string/individual_history"
            android:textColor="@color/grayWord_much" />

    </LinearLayout>

    <TextView
        style="@style/Line"
        android:layout_marginLeft="@dimen/individual_line_marginleft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_caogao1" />

        <TextView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="@string/individual_caogao"
            android:textColor="@color/grayWord_much" />

    </LinearLayout>

    <TextView style="@style/Line" />

    <TextView
        style="@style/individual_background"/>

    <TextView style="@style/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_shezhi1" />

        <TextView
            style="@style/wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="@string/individual_shezhi"
            android:textColor="@color/grayWord_much" />
    </LinearLayout>

    <TextView style="@style/Line" />

    <TextView
        style="@style/individual_background"/>

    <TextView style="@style/Line" />


</LinearLayout>