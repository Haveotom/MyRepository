<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/word_left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/individual_word"
            android:textColor="@color/wordColor"
            android:textSize="@dimen/textsize_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/padding_horizontal"
            android:paddingRight="@dimen/padding_horizontal"
            android:src="@mipmap/individual_night" />
    </LinearLayout>

    <TextView
        android:layout_width="35dp"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/padding_horizontal"
        android:background="@color/wordColor" />

    <TextView style="@style/Line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_one_hundred"
        android:gravity="center"
        android:text="立即登录,体验更多"
        android:textColor="@color/grayWord"
        android:textSize="@dimen/textsize_normal" />

    <!--四种登录方式-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_zhanghao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="账号登录" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_qq" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="QQ登录" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_weibo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="微博登录" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/individual_weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="微信登录" />

        </LinearLayout>


    </LinearLayout>

    <TextView style="@style/Line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_twenty"
        android:background="@color/grayBackground" />

    <TextView style="@style/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_youhuiquan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="我的优惠券"
            android:textColor="@color/grayWord_much" />
    </LinearLayout>

    <TextView
        style="@style/Line"
        android:layout_marginLeft="@dimen/individual_line_marginleft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_shoucang3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="我的收藏"
            android:textColor="@color/grayWord_much" />

    </LinearLayout>

    <TextView
        style="@style/Line"
        android:layout_marginLeft="@dimen/individual_line_marginleft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_shizhong1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="浏览历史"
            android:textColor="@color/grayWord_much" />

    </LinearLayout>

    <TextView
        style="@style/Line"
        android:layout_marginLeft="@dimen/individual_line_marginleft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_caogao1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="草稿箱"
            android:textColor="@color/grayWord_much" />

    </LinearLayout>

    <TextView style="@style/Line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_twenty"
        android:background="@color/grayBackground" />

    <TextView style="@style/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_fifty"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:src="@mipmap/individual_shezhi1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/word_left"
            android:text="设置"
            android:textColor="@color/grayWord_much" />
    </LinearLayout>

    <TextView style="@style/Line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/high_twenty"
        android:background="@color/grayBackground" />

    <TextView style="@style/Line" />


</LinearLayout>