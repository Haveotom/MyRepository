<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_margin_small"
        android:paddingRight="@dimen/padding_horizontal">

        <ImageView
            android:id="@+id/item_filter_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_horizontal"
            android:padding="@dimen/item_margin_small"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_horizontal"
            android:layout_marginTop="@dimen/padding_horizontal"
            android:layout_toRightOf="@id/item_filter_icon"
            android:text="name" />

        <TextView
            android:id="@+id/item_filter_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_filter_name"
            android:layout_below="@id/item_filter_name"
            android:layout_marginTop="@dimen/item_margin_small"
            android:text="price"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_small" />

        <RelativeLayout
            android:layout_width="@dimen/high_twenty"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/item_filter_paihangbang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@mipmap/pai" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/item_filter_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_smallest" />
            <!--transparent  背景透明-->
        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>