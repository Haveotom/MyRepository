<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/item_margin_small">

        <TextView
            android:layout_marginTop="@dimen/item_margin_small"
            android:id="@+id/item_fastreport_newspaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/wordColor_blue"
            android:textSize="@dimen/textsize_smallest" />

        <TextView
            android:id="@+id/item_fastreport_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fastreport_newspaper"
            android:layout_marginTop="@dimen/item_margin_small"
            android:textColor="@color/grayWord_much" />

        <TextView
            android:id="@+id/item_fastreport_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_fastreport_topic"
            android:layout_alignParentRight="true"
            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />

        <ImageView
            android:id="@+id/item_fastreport_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_fastreport_topic"
            android:layout_below="@id/item_fastreport_topic"
            android:src="@mipmap/car" />

        <TextView
            android:id="@+id/item_fastreport_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fastreport_picture"
            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />
    </RelativeLayout>

    <TextView
        style="@style/Line"
        android:layout_below="@id/item_fastreport_time"
        android:layout_marginTop="@dimen/item_margin_small" />


</LinearLayout>