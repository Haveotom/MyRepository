<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView style="@style/Line" />

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_horizontal">

        <ImageView
            android:id="@+id/item_video_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/bottom_small"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_video_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_small"
            android:layout_marginTop="@dimen/item_margin_small"
            android:layout_toRightOf="@id/item_video_icon_iv"

            android:textColor="@color/grayWord_much" />

        <TextView
            android:id="@+id/item_video_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_video_icon_iv"
            android:layout_alignLeft="@id/item_video_title_tv"
            android:layout_marginBottom="@dimen/item_margin_small"
            android:paddingLeft="@dimen/item_margin_small"

            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />

        <TextView
            android:id="@+id/item_video_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_video_time_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_horizontal"
            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/newest_picture_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/item_video2_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_small"

            android:textColor="@color/grayWord_much" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/item_margin_small"
            android:weightSum="3">

            <ImageView
                android:id="@+id/item_video2_icon1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/item_video2_icon2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/item_video2_icon3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/item_margin_small"
            android:weightSum="1">


            <TextView
                android:id="@+id/item_video2_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin_small"
                android:paddingLeft="@dimen/item_margin_small"
                android:textColor="@color/grayword_less"
                android:textSize="@dimen/textsize_smallest" />

            <TextView
                android:id="@+id/item_video2_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"

                android:textColor="@color/grayword_less"
                android:textSize="@dimen/textsize_smallest" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>