<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView style="@style/Line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_margin_small">

        <ImageView
            android:id="@+id/item_newest_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_hotpost_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_small"
            android:layout_marginTop="@dimen/item_margin_small"
            android:layout_toRightOf="@id/item_newest_icon_iv"
            android:text="标题"
            android:textColor="@color/grayWord_much" />

        <TextView
            android:id="@+id/item_hotpost_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_newest_icon_iv"
            android:layout_alignLeft="@id/item_hotpost_title_tv"
            android:paddingLeft="@dimen/item_margin_small"
            android:text="time"
            android:layout_marginBottom="@dimen/item_margin_small"
            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />

        <TextView
            android:id="@+id/item_newest_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_hotpost_time_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_margin_small"
            android:text="播放次数"
            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />

    </RelativeLayout>


</LinearLayout>