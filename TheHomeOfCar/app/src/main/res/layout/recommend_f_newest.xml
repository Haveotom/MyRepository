<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/newest_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
        android:id="@+id/newest_header_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/newest_height_hundredfifty"
           >


            <android.support.v4.view.ViewPager
                android:id="@+id/newest_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/newest_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/newest_linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/padding_ten"
                    android:background="@android:color/holo_orange_dark"
                    android:gravity="right|bottom"
                    android:orientation="horizontal"></LinearLayout>

            </android.support.v4.view.ViewPager>

        </RelativeLayout>
    </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>

</FrameLayout>