<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_video_fenlei_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="@dimen/padding_twelve"
            android:gravity="center"
            android:text="类别"
            android:textColor="@color/grayWord_much" />

        <ImageView
            android:id="@+id/item_video_duihao_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_twelve"
            android:src="@mipmap/duihao"
            android:visibility="invisible"/>
    </RelativeLayout>


</LinearLayout>