<?xml version="1.0" encoding="utf-8"?><!--降价-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/depreciate_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="right">

    <include layout="@layout/findcar_f_depreciate_include" />

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height">

                <TextView
                    android:id="@+id/depreciate_brand_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="选择品牌"
                    android:textColor="@color/grayWord_much"
                    android:textSize="@dimen/textsize_normal" />

                <TextView
                    android:id="@+id/depreciate_drawer_close_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_horizontal"
                    android:text="关闭"
                    android:textColor="@color/blue_middle" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/depreciate_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1" />
        </LinearLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>