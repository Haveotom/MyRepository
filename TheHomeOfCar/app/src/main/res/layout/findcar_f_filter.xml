<?xml version="1.0" encoding="utf-8"?><!--筛选-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/filter_text_tiaojian" />
    </LinearLayout>

    <TextView style="@style/Line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_horizontal"
        android:padding="@dimen/padding_horizontal"
        android:text="@string/filter_text_remenchexi"
        android:textSize="@dimen/textsize_small" />

    <TextView style="@style/Line" />

    <ListView
        android:id="@+id/filter_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>