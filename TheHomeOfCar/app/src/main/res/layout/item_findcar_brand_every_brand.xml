<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_child_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_horizontal"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/padding_horizontal"

        />

    <TextView
        android:id="@+id/item_child_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/padding_twelve"
        android:text="area"
        android:padding="@dimen/padding_horizontal"
        android:textColor="@color/grayWord_much"
        android:textSize="@dimen/textsize_small"
        android:typeface="monospace" />


</LinearLayout>