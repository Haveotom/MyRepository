<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_margin_small">


        <ImageView
            android:id="@+id/item_hot_sell_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_small"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_hot_sell_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_hot_sell_icon"
            android:layout_below="@id/item_hot_sell_icon"
            android:layout_marginTop="@dimen/item_margin_small"
            android:text="title"
            android:textColor="@color/grayWord" />

        <TextView
            android:id="@+id/item_hot_sell_adinfo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_hot_sell_icon"
            android:layout_below="@id/item_hot_sell_title_tv"
            android:layout_marginTop="@dimen/item_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="false"
            android:text="adinfo"
            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />
        <!--ellipsize  省略号显示的位置-->
        <!--maxlines  显示的最大行数-->
        <!--singleline  是否实现对行-->
        <!--android:scrollbars="horizontal"  横向滑动-->

        <TextView
            android:id="@+id/item_hot_sell_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_hot_sell_icon"
            android:layout_below="@id/item_hot_sell_adinfo_tv"
            android:layout_marginTop="@dimen/item_margin_small"
            android:text="price"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/item_hot_sell_fctprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_hot_sell_price_tv"
            android:layout_marginLeft="@dimen/bottom_small"
            android:layout_toRightOf="@id/item_hot_sell_price_tv"
            android:paddingBottom="@dimen/item_margin_small"
            android:text="fctprice"
            android:textColor="@color/grayword_less"
            android:textSize="@dimen/textsize_smallest" />
    </RelativeLayout>



</LinearLayout>